#!/bin/sh
# Can we crash guile-gnome by setting color properties?
exec $guile -s $0
!#
(use-modules (oop goops)
	     (burrow hacks)
	     (gnome gtk))

(define n-gc 0)
(add-hook! after-gc-hook (lambda ()(set! n-gc (+ n-gc 1))))

(define idx 1)
(while (< n-gc 5)
       (if (= 0 (remainder idx 5000))
	   (gc))
       (set! idx (+ 1 idx))
       (set (make <gtk-color-button>) 'color "red"))
